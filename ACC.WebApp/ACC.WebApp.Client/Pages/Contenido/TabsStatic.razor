@using Microsoft.AspNetCore.Components

@code {
    [Parameter]
    public List<string> Contenidos { get; set; } = new();
}

@if (Contenidos != null && Contenidos.Count > 0)
{
    <div class="leccion-container">
        <div class="tabs-static">
            @for (int i = 0; i < Contenidos.Count; i++)
            {
                <div class="bloque-seccion">
                    <details>
                        <summary>Sección @(i + 1)</summary>
                        <div class="contenido-tab">
                            @((MarkupString)Contenidos[i])
                        </div>
                    </details>
                </div>
            }
        </div>
    </div>
}
else
{
    <p style="color: red;">[No hay contenido de secciones]</p>
}
<style>
    .tabs-static {
        margin: 1rem 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .bloque-seccion details {
        background-color: #1e1f2b;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 0.75rem 1rem;
        color: #cbd5e1;
    }

    .bloque-seccion summary {
        font-weight: bold;
        cursor: pointer;
        color: #f1f3f5;
        margin-bottom: 0.5rem;
    }

    .contenido-tab {
        margin-top: 0.5rem;
        line-height: 1.6;
    }
</style>